{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "node",
      "rootDir": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "sourceMap": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.json"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }